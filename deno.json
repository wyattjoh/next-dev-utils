{
  "$schema": "https://github.com/denoland/deno/blob/main/cli/schemas/config-file.v1.json",
  "name": "@wyattjoh/next-dev-utils",
  "version": "2.0.1",
  "license": "MIT",
  "exports": {
    ".": "./src/cli.ts"
  },
  "publish": {
    "include": ["src/**/*.ts", "README.md", "LICENSE"]
  },
  "tasks": {
    "build": "deno compile --allow-all --output=./next-dev-utils src/cli.ts"
  },
  "nodeModulesDir": "auto",
  "imports": {
    "@bradenmacdonald/s3-lite-client": "jsr:@bradenmacdonald/s3-lite-client@^0.9.2",
    "@jollytoad/store": "jsr:@jollytoad/store@^0.4.0",
    "@jollytoad/store-deno-fs": "jsr:@jollytoad/store-deno-fs@^0.4.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@valibot/valibot": "jsr:@valibot/valibot@^1.1.0",
    "clipboardy": "npm:clipboardy@^4.0.0",
    "execa": "npm:execa@^9.6.0",
    "find-cache-dir": "npm:find-cache-dir@^6.0.0",
    "lefthook": "npm:lefthook@^1.12.2",
    "ora": "npm:ora@^8.2.0",
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.8",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.8",
    "strip-indent": "npm:strip-indent@^4.0.0",
    "inquirer": "npm:inquirer@^12.9.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
